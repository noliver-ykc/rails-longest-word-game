<h2> New game </h2>
<div class = "container">
  <div class="letters">
    <% @letters.each do |i| %>
          <div class="char"><%=i%></div>
      <% end %>
  </div>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method="get">
  <input type="text" name="word" placeholder="Play">
  <input type="submit">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
